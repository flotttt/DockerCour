# ===== APPLICATION =====
NODE_ENV=development
APP_NAME=BiblioFlow
APP_VERSION=1.0.0
DEBUG_MODE=true

# ===== SÉCURITÉ =====
JWT_SECRET=super-secret-biblioflow-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ===== POSTGRESQL =====
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=biblioflow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=biblioflow_postgres_secure_password_2024
DATABASE_URL=postgresql://postgres:biblioflow_postgres_secure_password_2024@postgres:5432/biblioflow

# ===== MONGODB =====
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=biblioflow_logs
MONGODB_USER=biblioflow_app
MONGODB_PASSWORD=biblioflow_mongodb_secure_password_2024
MONGODB_ROOT_PASSWORD=biblioflow_mongodb_root_password_2024
MONGODB_URL=mongodb://biblioflow_app:biblioflow_mongodb_secure_password_2024@mongodb:27017/biblioflow_logs?authSource=biblioflow_logs

# ===== SERVICES PORTS =====
FRONTEND_PORT=4200
BACKEND_PORT=3000
NGINX_PORT=80
POSTGRES_EXTERNAL_PORT=5432
MONGODB_EXTERNAL_PORT=27017

# ===== RÉSEAU ET CORS =====
CORS_ORIGIN=http://localhost
ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://localhost:4200

# ===== DÉVELOPPEMENT =====
HOT_RELOAD=true
CHOKIDAR_USEPOLLING=1
LOG_LEVEL=info
LOG_FORMAT=combined

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== EMAIL (pour futures fonctionnalités) =====
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@biblioflow.com

# ===== MONITORING =====
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3