# ===== APPLICATION =====
NODE_ENV=development
APP_NAME=BiblioFlow
APP_VERSION=1.0.0
DEBUG_MODE=true

# ===== SÉCURITÉ =====
JWT_SECRET=changez-cette-clé-jwt-en-production-minimum-32-caractères
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ===== POSTGRESQL =====
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=biblioflow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changez-ce-mot-de-passe-postgres
DATABASE_URL=postgresql://user:password@host:port/database

# ===== MONGODB =====
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=biblioflow_logs
MONGODB_USER=biblioflow_app
MONGODB_PASSWORD=changez-ce-mot-de-passe-mongodb
MONGODB_ROOT_PASSWORD=changez-ce-mot-de-passe-root-mongodb
MONGODB_URL=mongodb://user:password@host:port/database

# ===== SERVICES PORTS =====
FRONTEND_PORT=4200
BACKEND_PORT=3000
NGINX_PORT=80
POSTGRES_EXTERNAL_PORT=5432
MONGODB_EXTERNAL_PORT=27017

# ===== RÉSEAU ET CORS =====
CORS_ORIGIN=http://localhost
ALLOWED_ORIGINS=http://localhost,http://localhost:80

# ===== DÉVELOPPEMENT =====
HOT_RELOAD=true
CHOKIDAR_USEPOLLING=1
LOG_LEVEL=info

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== EMAIL =====
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@biblioflow.com